}
@soItemList.ShowPageHeader()
@soItemList.ShowMessages()
<main class="list @(soItemList.TotalRecords == 0 && !soItemList.IsAdd ? " ew-no-record" : "")">
<div id="ew-header-options">
    @soItemList.HeaderOptions.RenderBody()
</div>
<div id="ew-list">
@if (soItemList.TotalRecords > 0 || !Empty(soItemList.CurrentAction)) {
<div class="card ew-card ew-grid@(soItemList.IsAddOrEdit ? " ew-grid-add-edit" : "") @(soItemList.TableGridClass)">
<form name="@(soItemList.FormName)" id="@(soItemList.FormName)" class="ew-form ew-list-form" action="@AppPath(soItemList.PageName)" method="post" novalidate autocomplete="off">
@if (CurrentPage?.CheckToken ?? false) {
    <input type="hidden" name="@Config.TokenNameKey" value="@Config.TokenName"><!-- CSRF token name -->
    @Html.AntiForgeryToken()
}
@if (soItemList.IsModal) {
<input type="hidden" name="modal" value="1">
}
<div id="gmp_so_item" class="card-body ew-grid-middle-panel @(soItemList.TableContainerClass)" style="@(soItemList.TableContainerStyle)">
@if (soItemList.TotalRecords > 0 || soItemList.IsGridEdit || soItemList.IsMultiEdit) {
<table id="tbl_so_itemlist" class="@(soItemList.TableClass)"><!-- .ew-table -->
<thead>
    <tr class="ew-table-header">
@{
    // Header row
    soItemList.RowType = RowType.Header;

    // Render list options
    await soItemList.RenderListOptions();
}
@* Render list options (header, left) *@
@soItemList.ListOptions.RenderHeader("left")
@if (soItemList.SO_ITEM_ID.Visible) { // soItemList.SO_ITEM_ID.Visible (begin)
        <th data-name="SO_ITEM_ID" class="@(soItemList.SO_ITEM_ID.HeaderCellClass)"><div id="elh_so_item_SO_ITEM_ID" class="so_item_SO_ITEM_ID">@Html.Raw(soItemList.RenderFieldHeader(soItemList.SO_ITEM_ID))</div></th>
} @* soItemList.SO_ITEM_ID.Visible (end) *@
@if (soItemList.SO_ORDER_ID.Visible) { // soItemList.SO_ORDER_ID.Visible (begin)
        <th data-name="SO_ORDER_ID" class="@(soItemList.SO_ORDER_ID.HeaderCellClass)"><div id="elh_so_item_SO_ORDER_ID" class="so_item_SO_ORDER_ID">@Html.Raw(soItemList.RenderFieldHeader(soItemList.SO_ORDER_ID))</div></th>
} @* soItemList.SO_ORDER_ID.Visible (end) *@
@if (soItemList.ITEM_NAME.Visible) { // soItemList.ITEM_NAME.Visible (begin)
        <th data-name="ITEM_NAME" class="@(soItemList.ITEM_NAME.HeaderCellClass)"><div id="elh_so_item_ITEM_NAME" class="so_item_ITEM_NAME">@Html.Raw(soItemList.RenderFieldHeader(soItemList.ITEM_NAME))</div></th>
} @* soItemList.ITEM_NAME.Visible (end) *@
@if (soItemList.QUANTITY.Visible) { // soItemList.QUANTITY.Visible (begin)
        <th data-name="QUANTITY" class="@(soItemList.QUANTITY.HeaderCellClass)"><div id="elh_so_item_QUANTITY" class="so_item_QUANTITY">@Html.Raw(soItemList.RenderFieldHeader(soItemList.QUANTITY))</div></th>
} @* soItemList.QUANTITY.Visible (end) *@
@if (soItemList.PRICE.Visible) { // soItemList.PRICE.Visible (begin)
        <th data-name="PRICE" class="@(soItemList.PRICE.HeaderCellClass)"><div id="elh_so_item_PRICE" class="so_item_PRICE">@Html.Raw(soItemList.RenderFieldHeader(soItemList.PRICE))</div></th>
} @* soItemList.PRICE.Visible (end) *@
@* Render list options (header, right) *@
@soItemList.ListOptions.RenderHeader("right")
    </tr>
</thead>
<tbody data-page="@(soItemList.PageNumber)">
@{
    await soItemList.SetupGrid();
    bool eof = soItemList.Recordset == null; // DN
}
@while (soItemList.RecordCount < soItemList.StopRecord || SameString(soItemList.RowIndex, "$rowindex$")) { // Begin While
    if (!eof && !SameString(soItemList.RowIndex, "$rowindex$") &&
        (!soItemList.IsGridAdd || soItemList.CurrentMode == "copy") &&
        (!((soItemList.IsCopy || soItemList.IsAdd) && soItemList.RowIndex is int rowIndex && rowIndex == 0))) // DN
        eof = !await soItemList.Recordset.ReadAsync();
    soItemList.RecordCount++;
    if (soItemList.RecordCount >= soItemList.StartRecord) {
        await soItemList.SetupRow();
    <tr @Html.Raw(soItemList.RowAttributes)>
    @* Render list options (body, left) *@
    @soItemList.ListOptions.RenderBody("left", soItemList.RowCount)
    @if (soItemList.SO_ITEM_ID.Visible) { // soItemList.SO_ITEM_ID.Visible (begin)
        <td data-name="SO_ITEM_ID" @Html.Raw(soItemList.SO_ITEM_ID.CellAttributes)>
<span id="el@(soItemList.RowIndex == "$rowindex$" ? "$rowindex$" : soItemList.RowCount)_so_item_SO_ITEM_ID" class="el_so_item_SO_ITEM_ID">
<span @Html.Raw(soItemList.SO_ITEM_ID.ViewAttributes)>
@Html.Raw(soItemList.SO_ITEM_ID.GetViewValue())</span>
</span>
</td>
    } @* soItemList.SO_ITEM_ID.Visible (end) *@
    @if (soItemList.SO_ORDER_ID.Visible) { // soItemList.SO_ORDER_ID.Visible (begin)
        <td data-name="SO_ORDER_ID" @Html.Raw(soItemList.SO_ORDER_ID.CellAttributes)>
<span id="el@(soItemList.RowIndex == "$rowindex$" ? "$rowindex$" : soItemList.RowCount)_so_item_SO_ORDER_ID" class="el_so_item_SO_ORDER_ID">
<span @Html.Raw(soItemList.SO_ORDER_ID.ViewAttributes)>
@Html.Raw(soItemList.SO_ORDER_ID.GetViewValue())</span>
</span>
</td>
    } @* soItemList.SO_ORDER_ID.Visible (end) *@
    @if (soItemList.ITEM_NAME.Visible) { // soItemList.ITEM_NAME.Visible (begin)
        <td data-name="ITEM_NAME" @Html.Raw(soItemList.ITEM_NAME.CellAttributes)>
<span id="el@(soItemList.RowIndex == "$rowindex$" ? "$rowindex$" : soItemList.RowCount)_so_item_ITEM_NAME" class="el_so_item_ITEM_NAME">
<span @Html.Raw(soItemList.ITEM_NAME.ViewAttributes)>
@Html.Raw(soItemList.ITEM_NAME.GetViewValue())</span>
</span>
</td>
    } @* soItemList.ITEM_NAME.Visible (end) *@
    @if (soItemList.QUANTITY.Visible) { // soItemList.QUANTITY.Visible (begin)
        <td data-name="QUANTITY" @Html.Raw(soItemList.QUANTITY.CellAttributes)>
<span id="el@(soItemList.RowIndex == "$rowindex$" ? "$rowindex$" : soItemList.RowCount)_so_item_QUANTITY" class="el_so_item_QUANTITY">
<span @Html.Raw(soItemList.QUANTITY.ViewAttributes)>
@Html.Raw(soItemList.QUANTITY.GetViewValue())</span>
</span>
</td>
    } @* soItemList.QUANTITY.Visible (end) *@
    @if (soItemList.PRICE.Visible) { // soItemList.PRICE.Visible (begin)
        <td data-name="PRICE" @Html.Raw(soItemList.PRICE.CellAttributes)>
<span id="el@(soItemList.RowIndex == "$rowindex$" ? "$rowindex$" : soItemList.RowCount)_so_item_PRICE" class="el_so_item_PRICE">
<span @Html.Raw(soItemList.PRICE.ViewAttributes)>
@Html.Raw(soItemList.PRICE.GetViewValue())</span>
</span>
</td>
    } @* soItemList.PRICE.Visible (end) *@
    @* Render list options (body, right) *@
    @soItemList.ListOptions.RenderBody("right", soItemList.RowCount)
    </tr>
    } @* End if *@

    // Reset for template row
    if (SameString(soItemList.RowIndex, "$rowindex$"))
        soItemList.RowIndex = 0;

    // Reset inline add/copy row
    if ((soItemList.IsCopy || soItemList.IsAdd) && soItemList.RowIndex is int rowIndex2 && rowIndex2 == 0)
        soItemList.RowIndex = 1;
} @* End While *@
</tbody>
</table><!-- /.ew-table -->
} @* End If TotalRecords > 0 *@
</div><!-- /.ew-grid-middle-panel -->
@if (Empty(soItemList.CurrentAction) && !soItemList.UseAjaxActions) {
<input type="hidden" name="action" id="action" value="">
}
</form><!-- /.ew-list-form -->
@{ soItemList.CloseRecordset(); }
@if (!soItemList.IsExport()) {
<div class="card-footer ew-grid-lower-panel">
@if (!soItemList.IsGridAdd && !(soItemList.IsGridEdit && soItemList.ModalGridEdit) && !soItemList.IsMultiEdit) {
@Html.Raw(soItemList.Pager.Render())
}
<div class="ew-list-other-options">
@soItemList.OtherOptions.RenderBody("bottom")
</div>
</div>
}
</div><!-- /.ew-grid -->
} else { // Show other options
<div class="ew-list-other-options">
@soItemList.OtherOptions.ForEach(opt => opt.ButtonClass = "").RenderBody()
</div>
}
</div>
<div id="ew-footer-options">
    @soItemList.FooterOptions.RenderBody()
</div>
</main>
@soItemList.ShowPageFooter()
@Html.Raw(GetDebugMessage())
@ElapsedTime()
