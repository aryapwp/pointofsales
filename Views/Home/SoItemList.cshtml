@{
    // View
    View = this;

    // Check action result
    if (soItemList.ActionResult is EmptyResult) // Terminate page
        return;

    // Layout
    Layout = soItemList.UseLayout ? "_Layout" : "";
}
@if (!soItemList.IsExport()) {
<script>
var currentTable = @Html.Raw(ConvertToJson(soItemList.ToClientVar()));
ew.deepAssign(ew.vars, { tables: { so_item: currentTable } });
var currentPageID = ew.PAGE_ID = "list";
var currentForm;
var @(soItemList.FormName);
loadjs.ready(["wrapper", "head"], function () {
    let $ = jQuery;
    let fields = currentTable.fields;

    // Form object
    let form = new ew.FormBuilder()
        .setId("@(soItemList.FormName)")
        .setPageId("list")
        .setSubmitWithFetch(@(soItemList.UseAjaxActions ? "true" : "false"))
        .setFormKeyCountName("@(soItemList.FormKeyCountName)")
        .build();
    window[form.id] = form;
    currentForm = form;
    loadjs.done(form.id);
});
</script>
<script>
loadjs.ready("head", function() {
    // Write your client script here, no need to add script tags.
});
</script>
}
@if (!soItemList.IsExport()) {
<div class="btn-toolbar ew-toolbar">
@if (soItemList.TotalRecords > 0 && soItemList.ExportOptions.Visible) {
    soItemList.ExportOptions.Render("body");
}
@if (soItemList.ImportOptions.Visible) {
    soItemList.ImportOptions.Render("body");
}
@if (soItemList.SearchOptions.Visible) {
    soItemList.SearchOptions.Render("body");
}
@if (soItemList.FilterOptions.Visible) {
    soItemList.FilterOptions.Render("body");
}
</div>
}
@if (!soItemList.IsModal) {
<form name="fso_itemsrch" id="fso_itemsrch" class="ew-form ew-ext-search-form" action="@AppPath(CurrentPageName())" novalidate autocomplete="off">
<div id="fso_itemsrch_search_panel" class="mb-2 mb-sm-0 @(soItemList.SearchPanelClass)"><!-- .ew-search-panel -->
<script>
var currentTable = @Html.Raw(ConvertToJson(soItemList.ToClientVar()));
ew.deepAssign(ew.vars, { tables: { so_item: currentTable } });
var currentForm;
var fso_itemsrch, currentSearchForm, currentAdvancedSearchForm;
loadjs.ready(["wrapper", "head"], function () {
    let $ = jQuery,
        fields = currentTable.fields;

    // Form object for search
    let form = new ew.FormBuilder()
        .setId("fso_itemsrch")
        .setPageId("list")
@if (soItemList.UseAjaxActions) {
        <text>.setSubmitWithFetch(true)</text>
}

        // Dynamic selection lists
        .setLists({
        })

        // Filters
        .setFilterList(@Html.Raw(soItemList.GetFilterList()))
        .build();
    window[form.id] = form;
    currentSearchForm = form;
    loadjs.done(form.id);
});
</script>
<input type="hidden" name="cmd" value="search">
@if (!soItemList.IsExport() && Empty(soItemList.CurrentAction) && soItemList.HasSearchFields()) { @* Show search form (begin) *@
<div class="ew-extended-search container-fluid ps-2">
<div class="row mb-0">
    <div class="col-sm-auto px-0 pe-sm-2">
        <div class="ew-basic-search input-group">
            <input type="search" name="@(Config.TableBasicSearch)" id="@(Config.TableBasicSearch)" class="form-control ew-basic-search-keyword" value="@Html.Raw(HtmlEncode(soItemList.BasicSearch.SessionKeyword))" placeholder="@(HtmlEncode(Language.Phrase("Search")))" aria-label="@(HtmlEncode(Language.Phrase("Search")))">
            <input type="hidden" name="@(Config.TableBasicSearchType)" id="@(Config.TableBasicSearchType)" class="ew-basic-search-type" value="@(HtmlEncode(soItemList.BasicSearch.SessionType))">
            <button type="button" data-bs-toggle="dropdown" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" aria-haspopup="true" aria-expanded="false">
                <span id="searchtype">@Html.Raw(soItemList.BasicSearch.TypeNameShort)</span>
            </button>
            <div class="dropdown-menu dropdown-menu-end">
                <button type="button" class="dropdown-item@(soItemList.BasicSearch.SessionType == "" ? " active" : "")" form="fso_itemsrch" data-ew-action="search-type">@Html.Raw(Language.Phrase("QuickSearchAuto"))</button>
                <button type="button" class="dropdown-item@(soItemList.BasicSearch.SessionType == "=" ? " active" : "")" form="fso_itemsrch" data-ew-action="search-type" data-search-type="=">@Html.Raw(Language.Phrase("QuickSearchExact"))</button>
                <button type="button" class="dropdown-item@(soItemList.BasicSearch.SessionType == "AND" ? " active" : "")" form="fso_itemsrch" data-ew-action="search-type" data-search-type="AND">@Html.Raw(Language.Phrase("QuickSearchAll"))</button>
                <button type="button" class="dropdown-item@(soItemList.BasicSearch.SessionType == "OR" ? " active" : "")" form="fso_itemsrch" data-ew-action="search-type" data-search-type="OR">@Html.Raw(Language.Phrase("QuickSearchAny"))</button>
            </div>
        </div>
    </div>
    <div class="col-sm-auto mb-3">
        <button class="btn btn-primary" name="btn-submit" id="btn-submit" type="submit">@Html.Raw(Language.Phrase("SearchBtn"))</button>
