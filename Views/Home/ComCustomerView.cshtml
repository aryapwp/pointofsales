@{
    // View
    View = this;

    // Check action result
    if (comCustomerView.ActionResult is EmptyResult) // Terminate page
        return;

    // Layout
    Layout = comCustomerView.UseLayout ? "_Layout" : "";
}
@if (!comCustomerView.IsExport()) {
<div class="btn-toolbar ew-toolbar">
    @comCustomerView.ExportOptions.RenderBody()
    @comCustomerView.OtherOptions.RenderBody()
</div>
}
@comCustomerView.ShowPageHeader()
@comCustomerView.ShowMessages()
<main class="view">
<form name="fcom_customerview" id="fcom_customerview" class="ew-form ew-view-form overlay-wrapper" action="@AppPath(CurrentPageName())" method="post" novalidate autocomplete="off">
@if (!comCustomerView.IsExport()) {
<script>
var currentTable = @Html.Raw(ConvertToJson(comCustomerView.ToClientVar()));
ew.deepAssign(ew.vars, { tables: { com_customer: currentTable } });
var currentPageID = ew.PAGE_ID = "view";
var currentForm;
var fcom_customerview;
loadjs.ready(["wrapper", "head"], function () {
    let $ = jQuery;
    let fields = currentTable.fields;

    // Form object
    let form = new ew.FormBuilder()
        .setId("fcom_customerview")
        .setPageId("view")
        .build();
    window[form.id] = form;
    currentForm = form;
    loadjs.done(form.id);
});
</script>
<script>
loadjs.ready("head", function() {
    // Write your client script here, no need to add script tags.
});
</script>
}
@if (CurrentPage?.CheckToken ?? false) {
    <input type="hidden" name="@Config.TokenNameKey" value="@Config.TokenName"><!-- CSRF token name -->
    @Html.AntiForgeryToken()
}
<input type="hidden" name="modal" value="@ConvertToInt(comCustomerView.IsModal)">
<table class="@(comCustomerView.TableClass)">
@if (comCustomerView.COM_CUSTOMER_ID.Visible) { // comCustomerView.COM_CUSTOMER_ID.Visible (begin)
    <tr id="r_COM_CUSTOMER_ID" @Html.Raw(comCustomerView.COM_CUSTOMER_ID.RowAttributes)>
        <td class="@(comCustomerView.TableLeftColumnClass)"><span id="elh_com_customer_COM_CUSTOMER_ID">@Html.Raw(comCustomerView.COM_CUSTOMER_ID.Caption)</span></td>
        <td data-name="COM_CUSTOMER_ID" @Html.Raw(comCustomerView.COM_CUSTOMER_ID.CellAttributes)>
<span id="el_com_customer_COM_CUSTOMER_ID">
<span @Html.Raw(comCustomerView.COM_CUSTOMER_ID.ViewAttributes)>
@Html.Raw(comCustomerView.COM_CUSTOMER_ID.GetViewValue())</span>
</span></td>
    </tr>
} @* comCustomerView.COM_CUSTOMER_ID.Visible (end) *@
@if (comCustomerView.CUSTOMER_NAME.Visible) { // comCustomerView.CUSTOMER_NAME.Visible (begin)
    <tr id="r_CUSTOMER_NAME" @Html.Raw(comCustomerView.CUSTOMER_NAME.RowAttributes)>
        <td class="@(comCustomerView.TableLeftColumnClass)"><span id="elh_com_customer_CUSTOMER_NAME">@Html.Raw(comCustomerView.CUSTOMER_NAME.Caption)</span></td>
        <td data-name="CUSTOMER_NAME" @Html.Raw(comCustomerView.CUSTOMER_NAME.CellAttributes)>
<span id="el_com_customer_CUSTOMER_NAME">
<span @Html.Raw(comCustomerView.CUSTOMER_NAME.ViewAttributes)>
@Html.Raw(comCustomerView.CUSTOMER_NAME.GetViewValue())</span>
</span></td>
    </tr>
} @* comCustomerView.CUSTOMER_NAME.Visible (end) *@
</table>
@{ comCustomerView.CloseRecordset(); }
</form>
</main>
@comCustomerView.ShowPageFooter()
@Html.Raw(GetDebugMessage())
@ElapsedTime()
@if (!comCustomerView.IsExport()) {
<script>
loadjs.ready("load", function() {
    // Write your table-specific startup script here
    // document.write("page loaded");
});
</script>
}
